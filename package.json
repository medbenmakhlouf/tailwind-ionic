{
  "name": "tailwind-ionic",
  "version": "1.0.0",
  "description": "Tailwind v4 utility library for Ionic",
  "main": "dist/ionic-utils.css",
  "scripts": {
    "build": "npx @tailwindcss/cli -i ./src/index.css -o ./dist/ionic-utils.css --minify",
    "publish:public": "npm publish --access public"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "tailwindcss": "^4.1.0"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "files": [
    "dist",
    "index.css"
  ],
  "exports": {
    "./dist": "./dist/ionic-utils.css",
    "./index.css": "./index.css"
  },
  "keywords": [
    "tailwind",
    "ionic",
    "css",
    "utilities"
  ],
  "license": "MIT"
}
